        <ScrollPane hbarPolicy="ALWAYS" prefHeight="200.0" prefWidth="1000.0" vbarPolicy="NEVER"/>
        <TabPane layoutY="200.0" prefHeight="600.0" prefWidth="1000.0" side="RIGHT" stylesheets="@../gui/tabStyle.css"
                 tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Food Items">
                    <content>
                        <ScrollPane hbarPolicy="ALWAYS" prefHeight="200.0" prefWidth="200.0" vbarPolicy="ALWAYS">
                            <content>
                                <GridPane prefHeight="600.0" prefWidth="950.0" snapToPixel="false"
                                          stylesheets="@../gui/foodBtnStyle.css">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Button mnemonicParsing="false" stylesheets="@../gui/foodBtnStyle.css"
                                                text="Beef" textFill="#010006" GridPane.halignment="CENTER"
                                                GridPane.valignment="CENTER">
                                            <font>
                                                <Font name="System Bold" size="13.0"/>
                                            </font>
                                        </Button>
                                    </children>
                                </GridPane>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>
                <Tab text="Drinks">
                    <content>
                        <ScrollPane hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" vbarPolicy="ALWAYS">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0"/>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>
                <Tab text="Make Sale">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                    </content>
                </Tab>
                <Tab text="Orders">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
